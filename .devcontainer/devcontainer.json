{
	"name": "FastAPI + React + Claude Code",
	"build": {
		"dockerfile": "Dockerfile"
	},
	// ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers-extra/features/poetry:2": {}
	},
	// ðŸ‘‡ Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		13000,
		18000,
		15173
	],
	// ðŸ‘‡ Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.flake8",
				"ms-python.black-formatter",
				"ms-python.mypy-type-checker",
				"bradlc.vscode-tailwindcss",
				"esbenp.prettier-vscode",
				"ms-vscode.vscode-typescript-next",
				"dbaeumer.vscode-eslint",
				"iganbold.superdesign"
			],
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"python.formatting.provider": "black",
				"python.linting.enabled": true,
				"python.linting.flake8Enabled": true,
				"editor.formatOnSave": true,
				"editor.codeActionsOnSave": {
					"source.organizeImports": true
				}
			}
		}
	},
	// ðŸ‘‡ Post-create command to set up the development environment
	"postCreateCommand": "echo 'Development environment ready! FastAPI backend: http://localhost:8000, React frontend: http://localhost:3000'",
	// ðŸ‘‡ Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root",
	// ðŸ‘‡ Mount the workspace to /workspace in the container
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
	"workspaceFolder": "/workspace"
}
